<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main" >

       <Button
           android:id="@+id/btn_fb"
           android:layout_width="40dp"
           android:layout_height="40dp"
           android:layout_alignBaseline="@+id/btn_tw"
           android:layout_alignBottom="@+id/btn_tw"
           android:layout_alignLeft="@+id/btn_setting"
           android:background="@drawable/ic_facebook" />

       <Button
           android:id="@+id/btn_AroundView"
           android:layout_width="100dp"
           android:layout_height="70dp"
           android:layout_alignLeft="@+id/btn_homepage"
           android:layout_below="@+id/btn_homepage"
           android:background="@string/around_view"/>

       <Button
           android:id="@+id/btn_setting"
           android:layout_width="100dp"
           android:layout_height="70dp"
           android:layout_alignLeft="@+id/btn_AroundView"
           android:layout_below="@+id/btn_AroundView"
           android:background="@string/setting"/>

       <Button
           android:id="@+id/btn_homepage"
           android:layout_width="100dp"
           android:layout_height="70dp"
           android:layout_alignParentRight="true"
           android:layout_below="@+id/btn_start"
           android:layout_marginRight="27dp"
           android:layout_marginTop="23dp"
           android:background="@string/homepage" />

       <Button
           android:id="@+id/btn_tw"
           android:layout_width="40dp"
           android:layout_height="40dp"
           android:layout_alignRight="@+id/btn_setting"
           android:layout_below="@+id/btn_setting"
           android:layout_marginTop="35dp"
           android:background="@drawable/ic_twitter" />

       <Button
           android:id="@+id/btn_start"
           android:layout_width="180dp"
           android:layout_height="100dp"
           android:layout_alignParentRight="true"
           android:layout_alignTop="@+id/imageView2"
           android:background="@string/startview" />

       <ImageView
           android:id="@+id/imageView3"
           android:layout_width="wrap_content"
           android:layout_height="80dp"
           android:layout_alignParentLeft="true"
           android:layout_alignParentRight="true"
           android:layout_alignParentTop="true"
           android:layout_marginTop="26dp"
           android:src="@string/text_main"
           android:textSize="400pt" />

       <ImageView
           android:id="@+id/imageView2"
           android:layout_width="250dp"
           android:layout_height="400dp"
           android:layout_alignParentLeft="true"
           android:layout_below="@+id/imageView3"
           android:layout_marginTop="17dp"
           android:scaleType="fitXY"
           android:src="@drawable/img_main" />

       <ProgressBar
           android:id="@+id/progressBar_main"
           style="?android:attr/progressBarStyleLarge"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:layout_centerVertical="true" />
   
</RelativeLayout>
